         <!--form handling-->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="nom" class="text-light">Nom</label>
            <input type="hidden" name="id" value="<%= user._id %>"/>
            <input type="text" name="name" value="<%= user.name %>" placeholder="idriss enone"/>
        </div>

        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="email" name="email" value="<%= user.email %>" placeholder="example@gmail.com"/>
        </div>

        <div class="form-group">
            <label for="'sexe" class="text-light">Sexe</label>
            <div class="radio inline">
                <input type="radio" name="sexe" id="homme"  value="Homme" <%= user.gender =='Homme' ?'checked':'' %>/>
                <label for="homme" class="radio-label">Homme</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="sexe" id="femme" value="Femme" <%= user.gender =='Femme' ?'checked':'' %>/>
                <label for="femme" class="radio-label">Femme</label>
            </div>
            
        </div>

        <div class="form-group">
            <label for="'sexe" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" name="status" id="Active" value="Active" <%= user.status =='Active' ?'checked':'' %>/>
                <label for="Active" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="status" id="Inactive"  value="Inactive" <%= user.status =='Inactive' ?'checked':'' %>/>
                <label for="Inactive" class="radio-label">Inactive</label>
            </div>
            
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Modifier</button>
        </div>
    </div>
    
</form>

